generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId //Generate ID automatically for user 
  name           String?
  email          String   @unique
  image          String?
  addedFavorites Json[]
  favCoffeeId    String[] @db.ObjectId
  ownedBrewers   Coffee[] @relation("Brewer")
}

model Coffee {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId // Convention to say ID field
  name           String
  description    String
  price          Int // Schema accept Int and Float i/o Number 
  region         String
  weight         Float
  roast_level    Float
  flavor_profile Json[]
  grind_option   Json[]
  adminEmail     String
  brewer         Admin    @relation("Brewer", fields: [adminEmail], references: [email])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
